<form action="">
  <label class="sender">
    Sender:
    <input type="text" name="sender" placeholder="Sender's Name" required />
  </label>

  <label class="receiver">
    Receiver:
    <input type="text" name="receiver" placeholder="Receiver's Name" required />
  </label>

  <label class="message">
    Message:
    <textarea name="message" placeholder="Type your message here..." required
    ></textarea>
  </label>

  <label class="key">
    Key:
    <input type="text" name="key" placeholder="Encryption Key" required />
  </label>

  <label class="hint">
    Hint (optional):
    <input type="text" name="hint" placeholder="Hint for the key" />
  </label>

  <button type="submit">Encode</button>
</form>

<style>
  form {
    grid-template-columns: repeat(2, 1fr); /* Two columns for desktop */
    grid-template-areas:
      "sender receiver"
      "message message"
      "key hint";
  }
  .sender {
    grid-area: sender;
  }
  .receiver {
    grid-area: receiver;
  }
  .message {
    grid-area: message;
  }
  .key {
    grid-area: key;
  }
  .hint {
    grid-area: hint;
  }
  button {
    grid-column: span 2;
  }

  @media screen and (max-width: 768px) {
    form {
      grid-template-columns: 1fr;
      grid-template-areas:
        "sender"
        "receiver"
        "message"
        "key"
        "hint";
    }

    button {
      grid-column: span 1;
    }
  }
</style>
